<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp"
    tools:context=".MainActivity">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etNumber2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tilNumber1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btnButtonSubtract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.796" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="280dp" />

    <Button
        android:id="@+id/btnButtonAdd"
        android:layout_width="70dp"
        android:layout_height="98dp"
        android:layout_marginTop="132dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toEndOf="@+id/btnButtonSubtract"
        app:layout_constraintTop_toBottomOf="@+id/etNumber2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnButtonSubtract"
        android:layout_width="68dp"
        android:layout_height="96dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="248dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/btnButtonMultiplication"
        app:layout_constraintTop_toBottomOf="@+id/tilNumber1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnButtonMultiplication"
        android:layout_width="73dp"
        android:layout_height="94dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="248dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/btnButtonModulus"
        app:layout_constraintTop_toBottomOf="@+id/tilNumber1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnButtonModulus"
        android:layout_width="65dp"
        android:layout_height="98dp"
        android:layout_marginTop="244dp"
        android:text="%"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilNumber1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnButtonSubtract" />


</androidx.constraintlayout.widget.ConstraintLayout>